<div class="container">
  <%= form_with(model: user,
                html: {
                  novalidate: true
                },
                data: {
                  controller: 'form',
                  target: 'form.form',
                  action: 'click->form#submitForm'
                }) do |form| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <%= form.email_field :email, class: 'form-control', placeholder: 'Email', required: true,
        title: 'Email'%>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">User Name</label>
      <div class="col-sm-10">
        <%= form.text_field :username, class: 'form-control', placeholder: 'User Name', required: true,
        title: 'User Name'%>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">First Name</label>
      <div class="col-sm-10">
        <%= form.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">Last Name</label>
      <div class="col-sm-10">
        <%= form.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">Contact</label>
      <div class="col-sm-10">
        <%= form.text_field :contact, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">Company</label>
      <div class="col-sm-10">
        <%= form.text_field :company, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">Company Address</label>
      <div class="col-sm-10">
        <%= form.text_area :company_address, class: 'form-control' %>
      </div>
    </div>
    <% if current_user.admin? %>
      <div class="form-group row pt-2">
        <div class="col-sm-2 d-flex flex-row-reverse">
          <%= button_tag(type: "reset", class: "btn btn-default") do %>
            <i class="fa fa-refresh"></i>
          <% end %>
          <%= link_to root_path, class: "btn btn-default" do %>
            <i class="fa fa-home"></i>
          <% end %>
        </div>
        <div class="col-sm-10">
          <%= form.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>