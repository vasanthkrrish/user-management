<div class="container">
  <%= form_with(model: user) do |form| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <%= form.email_field :email, class: 'form-control', readonly: true %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">User Name</label>
      <div class="col-sm-10">
        <%= form.text_field :username, class: 'form-control', readonly: true %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">First Name</label>
      <div class="col-sm-10">
        <%= form.text_field :first_name, class: 'form-control', readonly: true %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">Last Name</label>
      <div class="col-sm-10">
        <%= form.text_field :last_name, class: 'form-control', readonly: true %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">Contact</label>
      <div class="col-sm-10">
        <%= form.text_field :contact, class: 'form-control', readonly: true %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">Company</label>
      <div class="col-sm-10">
        <%= form.text_field :company, class: 'form-control', readonly: true %>
      </div>
    </div>
    <div class="form-group row pt-2">
      <label class="col-sm-2 col-form-label">Company Address</label>
      <div class="col-sm-10">
        <%= form.text_area :company_address, class: 'form-control', readonly: true %>
      </div>
    </div>
    <% if current_user.admin? %>
      <div class="form-group row pt-2">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
          <%= link_to 'Back', root_path, class: 'btn btn-outline-secondary' %>
          <%= link_to 'Edit User', edit_user_path, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
