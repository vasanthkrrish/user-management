<div class="card mx-auto" style="width: 500px;">
  <div class="card-header d-flex justify-content-center">
    <h3>Forgot password?</h3>
  </div>
  <div class="card-body mt-3 mb-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form| %>
      <div class="form-group row">
        <div class="col">
          <%= form.email_field :email, class: 'form-control', placeholder: 'Enter email address' %>
        </div>
      </div>
      <div class="form-group row pt-2">
        <div class="col d-flex justify-content-center">
          <%= form.submit 'Reset Password', class: "btn btn-primary" %>
        </div>
      </div>
      <div class="form-group row pt-2">
        <div class="col d-flex justify-content-center">
          <%= link_to 'Login', new_session_path(resource_name) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

