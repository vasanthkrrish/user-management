<div class="card mx-auto" style="width: 500px;">
  <div class="card-header d-flex justify-content-center">
    <h3>Change password</h3>
  </div>
  <div class="card-body mt-3 mb-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put },
                 html: {
                   novalidate: true
                 },
                 data: {
                   controller: 'form',
                   target: 'form.form',
                   action: 'click->form#submitForm'
                 }) do |form| %>
      <%= form.hidden_field :reset_password_token %>
      <div class="form-group row">
        <div class="col">
          <%= form.password_field :password, class: 'form-control', placeholder: 'New Password', required: true %>
        </div>
      </div>
      <div class="form-group row pt-2">
        <div class="col">
          <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password', required: true %>
        </div>
      </div>
      <div class="form-group row pt-2">
        <div class="col d-flex justify-content-center">
          <%= form.submit 'Change Password', class: "btn btn-primary" %>
        </div>
      </div>
      <div class="form-group row pt-2">
        <div class="col d-flex justify-content-center">
          <%= link_to 'Login', new_session_path(resource_name) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

