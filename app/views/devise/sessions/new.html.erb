<div class="card mx-auto" style="width: 500px;">
  <div class="card-header d-flex justify-content-center">
    <h3>Login</h3>
  </div>
  <div class="card-body mt-3 mb-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: {
                   novalidate: true
                 },
                 data: {
                   controller: 'form',
                   target: 'form.form',
                   action: 'click->form#submitForm'
                 }) do |form| %>
      <div class="form-group row">
        <div class="col">
          <%= form.text_field :username, class: 'form-control', placeholder: 'Enter User Name', required: true,
          title: 'User Name'%>
        </div>
      </div>
      <div class="form-group row pt-2">
        <div class="col" data-controller="form">
          <%= form.password_field :password, class: 'form-control', placeholder: 'Enter Password', required: true,
          title: 'Password'%>
        </div>
      </div>
      <div class="form-group row pt-2">
        <div class="col d-flex justify-content-center">
          <%= button_tag 'Login', class: 'btn btn-primary' %>
        </div>
      </div>
      <div class="form-group row pt-2">
        <div class="col d-flex justify-content-center">
          <%= link_to 'Forgot Password?', new_password_path(resource_name) %>
        </div>
      </div>
    <% end %>
  </div>
</div>



